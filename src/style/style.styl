@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,700');

body {
	font-family: "Open Sans", Arial, sans-serif;
	text-align: center;
	background: #FFF;
	margin: 0;
}

.container {
	display: flex;
	align-items: center;
	justify-content: center;
	overflow: hidden;
	box-sizing: border-box;
	flex-direction: column;
	&.loaded {
		.containerSwitcher {
			opacity: 1;
		}
		.disclaimer {
			display: block;
		}
		.allChartsContainer {
			background: #F5F5F5;
		}
		.loader {
			display: none;
		}

	}

}

.disclaimer {
	margin-top: 2rem;
	font-size: 1em;
	line-height: 1.7;
	display: none;
}

.disclaimer, .header {
	margin: 0;
	background: #FFFFFF;
	width: 100%;
	padding: 20px 0;
}

h1,
h3 {
	padding: 0 120px;
	margin-bottom: .3em;
	text-align: center;
	font-weight: normal;
	line-height: 1;
}

h1 {
	margin-top: 10px;
}

h3 {
	line-height: 2;
}

.chartContainer {
	display: inline-block;
	width: 400px;
	margin: 20px 20px 0 0;
	position: relative;
	.chart {
		height: 300px;
	}
}

.allChartsContainer {
	min-height: 200px;
	padding-bottom: 20px;
	width: 100%;
	position: relative;
	background: #ffffff;
	transition: background 1s;
}

.loader {
	margin: 60px auto 0;
}

.button {
	display: inline-block;
	color: #FFF;
	border-radius: 4px;
	text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
	background: #00568F;
	text-decoration: none;
	padding: 5px 8px;
	white-space: nowrap;
	margin: 5px 0;

}

a {
	&,
	&:visited {
		color: #00568F;
	}
}

.containerSwitcher {
	opacity: 0;
	display: inline-block;
	line-height: 1em;
	vertical-align: middle;
	text-align: left;
	&-local {
		left: 40px;
	}
}

@media screen and (max-width: 700px) {
	h1,
	h3 {
		padding: 0 20px;
	}
}

@media screen and (max-width: 500px) {

	h1, h3 {
		padding: 0;
		font-size: 1.5em;
	}

	h3 {
		font-size: 1.1em;
	}

	.chart {
		width: 300px;
	}

	.containerSwitcher-local {
		left: -20px;
	}
}

@media screen and (max-width: 400px) {
	.container {
		margin: 30px 5px;
		font-size: .8em;
	}

}
